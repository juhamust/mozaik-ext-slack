{
  "name": "mozaik-ext-slack",
  "version": "0.9.3",
  "description": "Slack widgets to Mozaik dashboard",
  "author": "Juha Mustonen",
  "license": "MIT",
  "engineStrict": true,
  "engines": {
    "node": ">=8.3.0",
    "npm": ">=3.0.0"
  },
  "keywords": [
    "slack",
    "mozaik",
    "dashboard",
    "extension"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/juhamust/mozaik-ext-slack.git"
  },
  "dependencies": {
    "@babel/core": "^7.4.4",
    "@mozaik/babel-preset": "^1.0.0-alpha.6",
    "chalk": "1.1.3",
    "convict": "^2.0.0",
    "emojilib": "^2.4.0",
    "moment": "^2.17.1",
    "moment-duration-format": "1.3.0",
    "node-fetch": "^1.7.3",
    "prop-types": "^15.5.10",
    "react-icons": "^2.2.5",
    "react-mixin": "^5.0.0",
    "react-test-renderer": "^15.5.0",
    "reflux": "^6.4.1",
    "request": "^2.79.0",
    "request-promise-native": "^1.0.3",
    "sha.js": "^2.4.10",
    "slack": "^7.3.0",
    "slack-remove-formatting": "^0.2.0",
    "url-parse": "^1.2.0",
    "util.promisify": "^1.0.0",
    "vivus": "^0.4.3",
    "whatwg-fetch": "^2.0.3"
  },
  "main": "./lib/index.js",
  "module": "es/index.js",
  "jsnext:main": "es/index.js",
  "devDependencies": {
    "@babel/preset-es2017": "^7.0.0-beta.53",
    "@mozaik/ui": "^2.0.0-alpha.11",
    "ava": "^0.17.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^20.0.3",
    "babel-preset-es2015": "6.6.0",
    "babel-preset-react": "6.5.0",
    "coveralls": "^2.11.15",
    "cross-env": "^5.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^5.16.0",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "jest-styled-components": "^4.11.0-0",
    "lint-staged": "^4.0.2",
    "nivo": "^1.0.0-alpha.8",
    "nock": "^9.0.2",
    "nyc": "^10.0.0",
    "prettier": "^1.5.3",
    "react": "^16.7.0",
    "react-dom": "^16.8.6",
    "styled-components": "^3.0.2",
    "watch": "^1.0.2"
  },
  "peerDependencies": {
    "@mozaik/ui": "^2.0.0-alpha.11",
    "nivo": "^1.0.0-alpha.8",
    "react": "^16.7.0",
    "mozaik": ">=1.4.2"
  },
  "scripts": {
    "lint": "eslint ./src/** ./test/**",
    "lint:fix": "eslint --fix ./src/** ./test/**",
    "test": "jest --verbose",
    "test:cover": "jest --verbose --coverage",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "build:commonjs": "cross-env BABEL_ENV=commonjs babel src --out-dir lib",
    "build:es": "cross-env BABEL_ENV=es babel src --out-dir es",
    "build": "npm run build:commonjs && npm run build:es",
    "fmt": "prettier --print-width=100 --tab-width=2 --bracket-spacing --no-semi --trailing-comma es5 --single-quote --color --write \"{src,test}/**/*.js\" 'client.js'",
    "fmt:check": "prettier --print-width=100 --tab-width=2 --bracket-spacing --no-semi --trailing-comma es5 --single-quote --list-different \"{src,test}/**/*.js\" 'client.js'",
    "version": "echo ${npm_package_version}",
    "watch": "watch 'npm run build' src"
  },
  "lint-staged": {
    "*.js": [
      "lint:fix",
      "fmt",
      "git add",
      "jest --bail"
    ]
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/tests/setupTests.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  }
}
